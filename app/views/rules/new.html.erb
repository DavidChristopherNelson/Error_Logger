<h1>Rules#new</h1>
<p>Find me in app/views/rules/new.html.erb</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @rule, local: true) do |f| %>
    
      <%= f.label :execution_order %>
      <%= f.text_field :execution_order %>
      
      <%= f.label :field %>
      <%= f.text_field :field %>

      <%= f.label :regex %>
      <%= f.text_field :regex %>

      <%= f.label :path %>
      <%= f.text_field :path %>
      
      <%= f.submit "Create Error Entry", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>